---
import { tetimoniosList } from "../../constants";
import { Image } from 'astro:assets';

import {messageLeft, messageRight} from '../../assets'

interface testimonio{
    id: number;
    nombre: string;
    edad: string;
    servicio: string;
    comentario:string;
    picture:ImageMetadata;
}

---

<div class="justify-center py-40 md:px-[15rem] ">
    <h2 class="md:text-6xl text-2xl text-mainBlue md:text-left text-center font-extrabold mb-12">
        NUESTROS CLIENTES NOS AVALAN
    </h2>

    {
        tetimoniosList.map((item:testimonio)=>(
        <div class="mb-4">
                <div class="flex mb-4 ml-[10%]">
                    <p class={`${item.id % 2 === 0 ? 'bg-secondBlue':'bg-mainBlue'} text-white rounded-full md:text-3xl font-light  py-2 px-8`}>{`${item.nombre}, ${item.edad}`}</p>
                </div>
                <div class="flex mb-4 ml-[10%]">
                    <p class={`${item.id % 2 === 0 ? 'bg-secondBlue':'bg-mainBlue'} text-white rounded-full md:text-3xl font-light  py-2 px-8`}>{item.servicio}</p>
                </div>


            <div class={`p-1 flex  ${item.id % 2 === 0 ? 'flex-row-reverse' : ''}`}>
                <div class={`flex items-end mx-1 ${item.id % 2 === 0 ? 'justify-start w-full' : 'justify-end w-1/4'} `}>
                    <Image class={`md:h-20 h-14 w-14 items-start md:w-20 mr-4 rounded-full`}
                    src={item.picture } alt={item.nombre} /> 
                </div>
                <div class={`flex mb-4 
                    ${item.id % 2 === 0 ? 'ml-[10%]' : ''} 
                    `}>
                    <p class={`${item.id % 2 === 0 ? 'bg-secondBlue':'bg-mainBlue w-3/4'} text-white 
                    rounded-xl md:text-3xl font-light  py-8 px-10`}>{item.comentario}</p>
                </div>
        
            </div>
        </div>

        ))
    }

</div>
