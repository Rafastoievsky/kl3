---
import { numbersCardsData } from "../../constants";

import NumberCards from "./NumberCards.astro";

---
<div class="md:px-[15rem] gap-4 items-center justify-center py-12 px-4">
    <h2 class="md:text-4xl text-xl text-mainBlue text-center font-bold">
        MÁS DE UNA DÉCADA LIDERANDO EL MERCADO INMOBILIARIO
    </h2>
    <h1 class="md:text-6xl text-3xl text-mainBlue text-center font-bold">
        CON SATISFACCIÓN GARANTIZADA
    </h1>
    <div class="md:pt-10 p-6">
        {
            numbersCardsData.map((item) => (


                    <NumberCards data={item} />
            
                )
            )
        }

    </div>
</div>