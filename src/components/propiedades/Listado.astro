---

import {propiedadesList} from '../../constants'
import PropiedadCard from './PropiedadCard.astro';


---

<div class="md:px-[15rem] gap-4 items-center justify-center pt-12 pb-4 fondo relative ">

    <div class="gradient-overlay"></div>

    <h2 class="md:text-6xl text-3xl text-mainBlue md:text-left text-center font-extrabold">
        PROPIEDADES DISPONIBLES
    </h2>

    <div class="pt-10 grid md:grid-cols-3 gap-4">

        {
            propiedadesList.map((propiedad:any)=>(
                <PropiedadCard data={propiedad} />
            ))
        }

    </div>
    <div class="flex  items-center justify-center sendToFront relative z-10 ">
        <a href="/propiedades" class="text-white bg-mainBlue border-white p-4 mt-20 
        text-center rounded-3xl md:w-3/5 md:text-3xl text-xl border-8 font-semibold">
            Ver m√°s propiedades
        </a> 

    </div>

</div>

<style>
    .fondo {
        background: rgb(171, 178, 192);
        background: linear-gradient(0deg, rgba(171, 178, 192, 1) 0%, rgba(255, 255, 255, 1) 90%);
        /* Ajusta el valor 70% para cambiar la transparencia en la parte inferior */
    }

    .gradient-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
        z-index: 1; 
    }


</style>
